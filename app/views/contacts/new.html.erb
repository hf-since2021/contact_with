<div class="background">
  <div class="d-flex justify-content-center w-100 vh-100">
    <div class="bg-content w-75 h-100">
    </div>
  </div>
</div>

<div class="d-flex justify-content-center w-100 vh-100">
  <div class="w-75 h-100">
    <%# ヘッダー %>
    <%= render "shared/header" %>

    <div class="p-3 mt-5 mx-auto" style="width:500px;">
      <%= form_with model: @contact do |f| %><%# html: {style: "width:500px;"} %>
        <div class="text-center">
          <h3>欠席等届出</h3>
        </div>

        <div class="px-3 py-3">
          <%= f.label :date, "日付" %>
          <%= f.date_field :date, value: Time.now.strftime("%Y-%m-%d") %>
        </div>

        <div class="px-3 py-1">
          <%= f.label :request_type_id, RequestType.find(1).name %>
          <%= f.radio_button :request_type_id, 1, checked: true %>
          <span>　</span>
          <%= f.label :absent_type_id, "欠席種別" %>
          <%= f.collection_select :absent_type_id, AbsentType.all, :id, :name, {}, {} %>
          <%#= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        </div>

        <div class="px-3 py-1">
          <%= f.label :request_type_id, RequestType.find(2).name %>
          <%= f.radio_button :request_type_id, 2 %>
          <span>　</span>
          <%= f.collection_select :in_and_out_time_id, InAndOutTime.all, :id, :name, {}, {} %>
          から遅刻します。
        </div>

        <div class="px-3 py-1">
          <%= f.label :request_type_id, RequestType.find(3).name %>
          <%= f.radio_button :request_type_id, 3 %>
          <span>　</span>
          <%= f.collection_select :in_and_out_time_id, InAndOutTime.all, :id, :name, {}, {} %>
          から早退します。
        </div>

        <div class="px-3 py-3">
          <%= f.label :reason, "理由", style: "display:inline-block;vertical-align:top;" %>
          <%= f.text_area :reason, style: "display:inline-block;vertical-align:top;width:350px;" %>
        </div>

        <div class="px-3 py-3 text-center">
          <button type="submit" class="btn btn-info">登録</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

